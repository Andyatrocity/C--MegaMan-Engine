<UserControl x:Class="MegaMan.Editor.Controls.LayoutToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c="clr-namespace:MegaMan.Editor.Controls.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="28" d:DesignWidth="500">
    <ToolBarTray Orientation="Horizontal">
        <ToolBar Band="1" BandIndex="1">
            <RadioButton>
                Hand
            </RadioButton>
            <RadioButton>
                Cleave H
            </RadioButton>
            <RadioButton>
                Cleave V
            </RadioButton>
        </ToolBar>
        <ToolBar Band="1" BandIndex="2">
            <Button Command="{Binding AddScreenCommand}">
                AddScreen
            </Button>
        </ToolBar>
    </ToolBarTray>
</UserControl>
