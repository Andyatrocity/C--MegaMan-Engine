<UserControl x:Class="MegaMan.Editor.Controls.StageLayoutControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MegaMan.Editor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Background="Transparent"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True">
    <ScrollViewer x:Name="scrollContainer" CanContentScroll="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid>
            <local:GridCanvas x:Name="canvas" HorizontalAlignment="Left" VerticalAlignment="Top"></local:GridCanvas>
        </Grid>
    </ScrollViewer>
</UserControl>
